<div class="row justify-content-center">
  <h2>Resend confirmation instructions</h2>
</div>
<div class="row justify-content-center">
  <div class="col-md-6 col-lg-4">
    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="alert alert-success">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: user_confirmation_path, html: { method: :post, class: 'form-signin' }) do |f| %>
      <%= devise_error_messages! %>

      <h2 class="h3 mb-3 font-weight-normal">Confirm Your Email Address</h2>

      <p>Please enter the email address you used to sign up and we'll send you a confirmation link.</p>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit 'Send Confirmation Instructions', class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>
