<div class="nested-fields">
  <div class="row">
    <div class="col-md-8">
      <% if f.object.id.present? %>
        <%= f.hidden_field :id %>
      <% end %>

      <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-md-7">
          <div class="form-group">
            <%= f.text_field :title, class: "form-control", placeholder: 'Option title...', required: true %>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <%= f.number_field :points, class: "form-control", placeholder: 'points', required: true %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-group">
        <%= link_to_remove_association "Remove Option", f, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
