<div class="card">
  <div class="card-header">
    <h3><%= @questionnaire.title %>(<%= @questionnaire.total_score %> points)</h3>
    <h3><%= @questionnaire.description %></h3>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-sm-12">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Question</th>
              <th>Options</th>
              <th>Score</th>
            </tr>
          </thead>
          <tbody>
            <% @questionnaire.questions.each_with_index do |question, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= question.title %></td>
                <td>
                  <% if question.question_type == 'single_choice' %>
                    <% question.options.each do |option| %>
                      <p>○ <%= option.title %></p>
                    <% end %>
                  <% else %>
                    <% question.options.each do |option| %>
                        <p>□ <%= option.title %></p>
                    <% end %>
                  <% end %>
                </td>
                <td>
                  <%= question.score %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 text-right">
        <p class="font-weight-bold">Total Points: <%= @questionnaire.total_score %></p>
      </div>
    </div>

    <%= link_to 'Edit', edit_questionnaire_path(@questionnaire), class: "btn btn-primary" %>
    <%= link_to 'Back', questionnaires_path, class: "btn btn-secondary" %>
  </div>
</div>
